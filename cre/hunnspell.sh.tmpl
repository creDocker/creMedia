      ;;
   *"utf-8"*)
      echo "UTF-8 encoding found: $fn"
      ;;
   *)
      echo "UNKNOWN encoding found: $fileEnc in $fn"
      head $fn
      ;;
  esac
done

file -bi /usr/share/hunspell/*.aff  && \
file -bi /usr/share/hunspell/*.dic

