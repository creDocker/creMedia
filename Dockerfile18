FROM credocker/creubuntu:2018.0
MAINTAINER Michael Kahle <michael.kahle@yahoo.de>

ARG BUILD_YEAR=2018
ARG BUILD_MONTH=0
ARG BUILD_TAG=latest

ENV XXX_VERSION 1.0.0
ENV TESSERACT_VERSION 5

LABEL Name="Media for CRE" \
      CRE=$CRE_VERSION \ 
      Year=$BUILD_YEAR \
      Month=$BUILD_MONTH \
      Version=$XXX_VERSION \
      OS="Ubuntu:$UBUNTU_VERSION" \
      Build_=$BUILD_TAG 

# uses jq & amqp-tools

# install tesseract

##RUN  
